<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionAddActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/coordinator">


        <android.support.v4.view.ViewPager
            android:id="@+id/transaction_add_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabLayout
                android:id="@+id/transaction_add_TablayoutID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp" />

        </android.support.v4.view.ViewPager>
    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/coordinator">
    <TextView
        android:id="@+id/categoryAdd_textView"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Category" />

    <EditText
        android:id="@+id/categoryAdd_editText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/categoryAdd_textView" />

    <TextView
        android:id="@+id/expenseAdd_textView"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/categoryAdd_textView"
        android:text="Expense" />

    <EditText
        android:id="@+id/expenseAdd_editText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryAdd_editText"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/expenseAdd_textView"
        android:inputType="numberDecimal"
       />

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:text="DONE" />

    </RelativeLayout>

</RelativeLayout>