<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionAddActivity">

    <TextView
        android:id="@+id/categoryAdd_textView"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Category" />

    <EditText
        android:id="@+id/categoryAdd_editText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/categoryAdd_textView" />

    <TextView
        android:id="@+id/expenseAdd_textView"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/categoryAdd_textView"
        android:text="Expense" />

    <EditText
        android:id="@+id/expenseAdd_editText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryAdd_editText"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/expenseAdd_textView"
        android:inputType="numberDecimal"
       />

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="DONE" />

</RelativeLayout>