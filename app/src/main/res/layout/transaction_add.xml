<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransactionAddActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="Add a new Transaction"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transaction_add_layout"
        android:padding="10dp"
        android:orientation="vertical"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/basic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/date_textView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateDisplay_textView"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/date_textView" />

            <TextView
                android:id="@+id/expenseAdd_textView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/date_textView"
                android:text="â‚¬"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/expenseAdd_editText"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/expenseAdd_textView"
                android:layout_alignParentEnd="true"
                android:inputType="numberDecimal"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="110dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/expense_button"
                    android:layout_width="170dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/holo_red_light"
                    android:text="Expense"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/income_button"
                    android:layout_width="170dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/applegreen"
                    android:text="Income"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <TextView
                android:id="@+id/account_textView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Account"
                android:layout_below="@+id/buttons"
                android:layout_marginTop="20dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/account_spinner"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/account_textView"
                android:textAlignment="viewEnd"
                android:layout_below="@+id/buttons"
                android:layout_marginTop="20dp"
                android:spinnerMode="dialog"></Spinner>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expense_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/category_textView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Category"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/category_Spinner"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_toRightOf="@+id/category_textView"
                android:spinnerMode="dialog"></Spinner>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/income_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/category_textView2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Category"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/category_Spinner2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_toRightOf="@+id/category_textView2"
                android:spinnerMode="dialog"></Spinner>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/description_textView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Description"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/description_editView"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:inputType="text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/done_button"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="DONE"
                android:textSize="18sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>